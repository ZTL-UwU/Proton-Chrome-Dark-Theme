            "ntp_background": "rgba(50, 54, 57, 1)",
            "ntp_text": "rgba(214, 215, 215, 1)",

            "sidebar": "rgba(40, 44, 47, 1)",
            "sidebar_border": "rgba(40, 44, 47, 1)",
            "sidebar_text":  "rgba(214, 215, 215, 1)",
